<UserControl x:Class="SRS_Maker.View.IO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <GroupBox Header="IO General" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="261" Height="206">
            <Grid>
                <CheckBox Content="Analog Inputs" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <CheckBox Content="Digital Inputs" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <CheckBox Content="Digital Outputs" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <CheckBox Content="Fast Digital Inputs" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <CheckBox Content="Virtual Inputs" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <Label Content="Multiple Activation Delay(us)" HorizontalAlignment="Left" Margin="7,132,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="178,133,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="50"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="ADC" HorizontalAlignment="Left" Margin="0,230,0,0" VerticalAlignment="Top" Width="552" Height="389">
            <Grid>
                <GroupBox Header="Battery Monitoring" HorizontalAlignment="Left" Margin="10,151,0,0" VerticalAlignment="Top" Width="182" Height="176">
                    <Grid>
                        <Label Content="BAT Pin" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
                        <Label Content="ING Pin" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
                        <ComboBox HorizontalAlignment="Left" Margin="67,70,0,0" VerticalAlignment="Top" Width="86" IsEnabled="False"/>
                        <ComboBox HorizontalAlignment="Left" Margin="67,101,0,0" VerticalAlignment="Top" Width="86" IsEnabled="False"/>
                        <RadioButton Content="Battery only" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <RadioButton Content="Battery and Ignition" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
